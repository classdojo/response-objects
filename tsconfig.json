{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"alwaysStrict": true
	},
	"exclude": [
		"node_modules",
		"test",
		"dist"
	]
}
